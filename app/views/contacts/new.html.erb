<% provide(:title, 'Nieuw contact') %>
<div class="container custom-page">
  <h1 class="visible-sm visible-md visible-lg text-center" style="color: #428bca;"><%= yield(:title) %></h1>
  <div style="padding-top: 30px;">
    <%= form_for(@contact) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <div class="form-group">
        <%= f.label 'Bedrijfsnaam' %>
        <%= f.text_field :company, placeholder: "Bedrijfsnaam", class: "form-control" %>
      </div>
      
      <div class="form-group">
        <%= f.label 'Contactpersoon' %>
        <%= f.text_field :name, class: "form-control", placeholder: "Contactpersoon" %>
      </div>

      <div class="form-group">
        <%= f.label 'E-mail' %>
        <%= f.text_field :email, class: "form-control", placeholder: "E-mail" %>
      </div>

      <div class="form-group">
        <%= f.label 'Straatnaam + huisnummer' %>
        <%= f.text_field :address, class: "form-control", placeholder: "Straatnaam 12" %>
      </div>

      <div class="form-group">
        <%= f.label 'Postcode' %>
        <%= f.text_field :postcode, class: "form-control", placeholder: "1234AA" %>
      </div>

      <div class="form-group">
        <%= f.label 'Plaatsnaam' %>
        <%= f.text_field :city, class: "form-control", placeholder: "Plaatsnaam" %>
      </div>

      <div class="form-group">
        <%= f.label 'KvK nummer' %>
        <%= f.text_field :kvk, class: "form-control", placeholder: "Bijv. 12345678" %>
      </div>

      <div class="form-group">
        <%= f.label 'BTW nummer' %>
        <%= f.text_field :btw, class: "form-control", placeholder: "Bijv. 123456789B12" %>
      </div>

      <div class="form-group">
        <%= f.label 'IBAN' %>
        <%= f.text_field :account, class: "form-control", placeholder: "Bijv. NL12ABCD0123456789" %>
      </div>
      
      <table class="table">
        <tr>
          <td style="text-align: left; padding: 20px 0px 10px 0px; border:none;"><a href="/contacts" class="btn btn-primary btn-sm" style="border:none;">Terug</a></td>
          <td style="text-align: right; padding: 20px 0px 10px 0px; border:none;"><%= f.submit "Voeg contact toe", class: "btn btn-primary btn-sm", style: "border:none;" %></td>
        </tr>
      </table>   
    <% end %>
  </div>
</div>