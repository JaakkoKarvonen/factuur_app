<% provide(:title, 'Contacten') %>
<h3>Contacten</h3>
<%= will_paginate %>
<ul>
  <% @contacts.each do |contact| %>
    <li><%= link_to contact.name, contact %> <small>(<%= contact.company %>)</small> <%= link_to 'Wijzig', edit_contact_path(contact) %>
    | <%= link_to "Verwijder", contact, method: :delete, data: { confirm: "Weet u het zeker?" } %></li>
  <% end %>
</ul>
<%= will_paginate %>
