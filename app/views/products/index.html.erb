<% provide(:title, 'Producten') %>

<div class="container custom-page" style="padding-top: 30px;">
	<h1 class="visible-sm visible-md visible-lg text-center" style="color: #428bca;"><%= yield(:title) %></h1>
	
	<div class="home-buttons" style="padding-bottom: 30px;">
    	<a href="/products/new" class="btn btn-primary btn-lg" style="width: 200px; border:none; text-align: left;"><span class="glyphicon glyphicon-plus" style="padding-right: 5px;"></span> Voeg product toe</a>
  	</div>

	<%= will_paginate %>

	<div class="panel-group" id="accordion">
	 <% @products.each do |product| %>

	  <div class="panel panel-default">
	    <div class="panel-heading" style="background-color: #428bca; border: none; color: white;">
	      <h4 class="panel-title">
	        <a data-toggle="collapse" data-parent="#accordion" href="#<%= product.id %>">
	          <span class="glyphicon glyphicon-chevron-down" style="padding-right: 10px;"></span><%= product.name %> â‚¬

	          
	          <%= number_with_precision(product.price, :precision => 2) %>
	        </a>
	      </h4>
	    </div>
	    <div id="<%= product.id %>" class="panel-collapse collapse collapse">
	      <div class="panel-body">
	      	<small>Serienummer: <%=product.serial%></small>
	      	<p style="padding-top: 10px;"><%= product.description %></p>

	      	<table class="table">
		        <tr>
		          <td style="text-align: left; padding: 20px 0px 10px 0px; border:none;"><%= link_to 'Wijzig', edit_product_path(product), class: "btn btn-primary btn-sm" %></td>
		          <td style="text-align: right; padding: 20px 0px 10px 0px; border:none;"><%= link_to "Verwijder", product, method: :delete, data: { confirm: "Weet u het zeker?" }, class: "btn btn-primary btn-sm" %></td>
		        </tr>
		     </table>   
	      </div>
	    </div>
	  </div>

	 <% end %>
	</div>

	<%= will_paginate %>


</div>
