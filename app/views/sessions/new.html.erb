<% provide(:title, "Inloggen") %>
<h1>Inloggen</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email, "E-mail" %>
      <%= f.text_field :email %>

      <%= f.label :password, "Wachtwoord" %>
      <%= f.password_field :password %>

      <%= f.submit "Inloggen", class: "btn btn-large btn-primary" %>
    <% end %>

    <p>Nieuwe gebruiker? <%= link_to "Aanmelden", signup_path %></p>
  </div>
</div>