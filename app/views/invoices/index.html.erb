<% provide(:title, 'Facturen') %>

<div class="container custom-page" style="padding-top: 30px;">
	<h1 class="visible-sm visible-md visible-lg text-center" style="color: #428bca;"><%= yield(:title) %></h1>
	<div class="home-buttons" style="padding-bottom: 30px;">
    	<a href="/invoices/new" class="btn btn-primary btn-lg" style="width: 200px; border:none; text-align: left;"><span class="glyphicon glyphicon-plus" style="padding-right: 5px;"></span> Nieuwe factuur</a>
  	</div>
	 <% @invoices.each do |invoice| %>
	 	<a href="/invoices/<%= invoice.id %>" class="btn btn-primary btn-lg btn-block">
	 		Factuur <%= @factnr = Time.now.year.to_s + invoice.id.to_s.rjust(3, '0') %>
	 	</a>	
	 <% end %>
</div>